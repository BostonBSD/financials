#include <json-glib/json-glib.h>

void *JsonExtractEquity(char *str, double *current_price_f){// Take in a string of JSON data, and a reference to a price double.
    JsonParser *parser = json_parser_new ();

    if(json_parser_load_from_data (parser, str, -1, NULL) == TRUE){// Parse JSON data with json-glib

        JsonReader *reader = json_reader_new (json_parser_get_root (parser));

        json_reader_read_member (reader, "c");
        *current_price_f = json_reader_get_double_value (reader);// Extract price from JSON data as a double.
        json_reader_end_member (reader);

        g_object_unref (reader);
    }

    g_object_unref (parser);
    return NULL;// The current_price_f was passed by reference, no need to return anything.
}

void *JsonExtractBullion(char *str, double *spot_price_f){// Take in a string of JSON data, and a reference to a spot price double.
    JsonParser *parser = json_parser_new ();

    if(json_parser_load_from_data (parser, str, -1, NULL) == TRUE){// Parse JSON data with json-glib

        JsonReader *reader = json_reader_new (json_parser_get_root (parser));

        json_reader_read_member (reader, "quote");
        json_reader_read_member (reader, "USD");
        *spot_price_f = json_reader_get_double_value (reader);// Extract spot price from JSON data as a double.
        json_reader_end_member (reader);
        json_reader_end_member (reader);

        g_object_unref (reader);
    }

    g_object_unref (parser);
    return NULL;// The spot_price_f was passed by reference, no need to return anything.
}