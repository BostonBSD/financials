#define CH_SIZE 128

//Structures
typedef struct {
	int num_shares_stock_int;
    double current_price_stock_f; 
	double current_investment_stock_f;
	
	char current_price_stock_ch[CH_SIZE];
	char current_investment_stock_ch[CH_SIZE]; //The total current investment in the stock.
	
	char symbol_stock_ch[CH_SIZE];   //The stock symbol in all caps, it's used to create the curl URL
	char curl_url_stock_ch[CH_SIZE]; //Each stock has it's own URL request
    
} stock; 

//Globals
